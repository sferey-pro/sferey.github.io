---
import { SITE_TITLE, SITE_DESCRIPTION } from '@consts';
import Footer from '@components/Footer.astro';
import Metadata from '@components/Metadata.astro';
import Navigation from '@components/Navigation.astro';
---

<html lang="fr" class="light" style="color-scheme: light;" transition:animate="none">
	<head>
		<Metadata title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="min-h-screen bg-stone-100 dark:bg-slate-800">
			<Navigation />
			<div
				class="container mx-auto flex min-h-screen max-w-screen-xl flex-grow flex-col px-5 py-8 md:px-12 lg:px-20"
			>
				<main transition:animate="fade">
					<slot />
				</main>
			</div>
			<Footer />
		</div>
	</body>
</html>

<script>
	import 'flowbite';
</script>
