---
import { Icon } from 'astro-icon/components';
---

<section class="mt-24">
	<span class="mb-8 flex items-center text-fore-primary">
		<div class="mr-4 rounded-full bg-back-subtle p-2">
			<Icon name="mdi:wrench" size="2em" />
		</div>
		<h3 class="w-fit border-b border-b-slate-200 text-2xl md:text-3xl">Comp√©tences</h3>
	</span>
	<ul class="flex flex-wrap items-center justify-center text-fore-primary">
		{
			[
				{ name: 'html5', label: 'HTML 5' },
				{ name: 'css3', label: 'CSS 3' },
				{ name: 'javascript', label: 'Javascript' },
				{ name: 'php', label: 'PHP' },
				{ name: 'phpunit', label: 'PHPUnit' },
				{ name: 'git', label: 'Git' },
				{ name: 'zend', label: 'Zend Framework' },
				{ name: 'symfony-light', label: 'Symfony', mode: 'light' },
				{ name: 'symfony-dark', label: 'Symfony', mode: 'dark' },
				{ name: 'postgresql', label: 'PostgreSQL' },
				{ name: 'docker', label: 'Docker' },
				{ name: 'nodejs', label: 'Node.js' },
				{ name: 'flutter', label: 'Flutter' },
				{ name: 'typescript', label: 'Typescript' },
				{ name: 'graphql', label: 'GraphQL' },
				{ name: 'tailwindcss', label: 'TailwindCSS' },
				{ name: 'go', label: 'GO' },
				{ name: 'googlecloud', label: 'Google Cloud' },
				{ name: 'astro-light', label: 'Astro', mode: 'light' },
				{ name: 'astro-dark', label: 'Symfony', mode: 'dark' },
			].map((icon) => (
				<li class="flex items-center">
					<Icon
						data-tooltip-target={`tooltip-${icon.name}`}
						name={icon.name}
						class:list={[
							'mb-4 me-4 md:me-6',
							icon.mode ? icon.mode === 'dark' && 'hidden dark:block' : '',
							icon.mode ? icon.mode === 'light' && 'dark:hidden' : '',
						]}
						width="60"
						height="60"
					/>
					<div
						id={`tooltip-${icon.name}`}
						role="tooltip"
						class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm transition-opacity duration-300 dark:bg-gray-700"
					>
						{icon.label}
						<div class="tooltip-arrow" data-popper-arrow />
					</div>
				</li>
			))
		}
	</ul>
</section>
