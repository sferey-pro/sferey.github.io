---
import { Icon } from 'astro-icon/components';

interface Props {
	resume?: string;
	technique?: string;
	email?: string;
	github?: string;
	website?: string;
	linkedin?: string;
}

const { resume, technique, email, github, website, linkedin } = Astro.props;
---

<div class="flex items-center justify-center lg:justify-start">
	{
		resume && (
			<a
				href={resume}
				target="_blank"
				rel="noreferrer"
				class="mr-4 flex w-fit cursor-pointer items-center rounded border-2 border-accent px-4 py-1 text-fore-primary transition-colors hover:bg-accent hover:text-white"
			>
				<span class="mr-2">
					<Icon name="mdi:scroll-text-outline" size="1.5em" />
				</span>
				Curriculum Vitae
			</a>
		)
	}

	{
		technique && (
			<a
				href={technique}
				target="_blank"
				rel="noreferrer"
				class="mr-4 flex w-fit cursor-pointer items-center rounded border-2 border-accent px-4 py-1 text-fore-primary transition-colors hover:bg-accent hover:text-white"
			>
				<span class="mr-2">
					<Icon name="mdi:tools" size="1.5em" />
				</span>
				Dossier technique
			</a>
		)
	}

	<span class="ml-2 flex gap-x-5">
		{
			website && (
				<a
					href={website}
					class="group cursor-pointer"
					aria-label="Website"
					title="Website"
					target="_blank"
				>
					<Icon
						name="mdi:globe"
						size="1.5em"
						class:list={'text-xl text-fore-subtle transition-transform group-hover:-translate-y-2'}
					/>
				</a>
			)
		}
		{
			email && (
				<a
					href={`mailto:${email}`}
					class="group cursor-pointer"
					aria-label="Email"
					title="Email"
					target="_blank"
				>
					<Icon
						name="line-md:at"
						size="1.5em"
						class:list={'text-xl text-fore-subtle transition-transform group-hover:-translate-y-2'}
					/>
				</a>
			)
		}
		{
			github && (
				<a
					href={`https://github.com/${github}`}
					class="group cursor-pointer"
					aria-label="Github"
					title="Github"
					target="_blank"
				>
					<Icon
						name="line-md:github-loop"
						size="1.5em"
						class:list={'text-xl text-fore-subtle transition-transform group-hover:-translate-y-2'}
					/>
				</a>
			)
		}
		{
			linkedin && (
				<a
					href={`https://www.linkedin.com/in/${linkedin}`}
					class="group cursor-pointer"
					aria-label="Linkedin"
					title="Linkedin"
					target="_blank"
				>
					<Icon
						name="line-md:linkedin"
						size="1.5em"
						class:list={'text-xl text-fore-subtle transition-transform group-hover:-translate-y-2'}
					/>
				</a>
			)
		}
	</span>
</div>
