---
interface Props {
	date: Date;
	class?: string | undefined | null;
	options?: Intl.DateTimeFormatOptions;
}

const {
	date,
	options = {
		dateStyle: 'medium',
	},
	class: className,
	...props
} = Astro.props;
---

<time {...props} class:list={[className]} datetime={date.toISOString()}>
	{date.toLocaleDateString('fr-fr', options)}
</time>
